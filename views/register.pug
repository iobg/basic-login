h1 register
if msg
	p #{msg}
.register
	form(method="POST")
		.form-group
			label(for="email") Email Address
			input.form-control#email(type="email" name="email" placeholder="you@example.com")
		.form-group
			label(for="password") Password
			input.form-control#password(type="password" name="password" placeholder="password")
		.form-group
			label(for="passwordConfirm") Password Confirmation
			input.form-control#password(type="password" name="passwordConfirm" placeholder="password confirmation")
		.register__submit
			a(href="/")
				button(type="button") Back
			button(type="submit" value="login") Register
